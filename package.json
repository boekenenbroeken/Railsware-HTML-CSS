  "dependencies": {},
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "autoprefixer": "^9.6.4",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.8",
    "lint": "^0.8.8",
    "postcss": "^7.0.18",
    "postcss-easy-import": "^3.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.1.2",
    "precss": "^4.0.0",
